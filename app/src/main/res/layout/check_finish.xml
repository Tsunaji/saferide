<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:columnCount="10"
    android:background="@drawable/menu_page">

    <Space
        android:layout_row="1"
        android:layout_columnSpan="7"
        android:layout_gravity="fill"/>
    <Space
        android:layout_row="2"
        android:layout_column="1"
        android:layout_width="56dp"
        android:layout_height="56dp"/>
    <Button
        android:text=" "
        android:id="@+id/finishButton"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:background="@drawable/but_safe_ride"
        android:layout_columnSpan="5"
        android:layout_width="228dp"
        android:layout_height="228dp" />


    <TextView
        android:text="@string/give_score"
        android:textSize="16dip"
        android:id="@+id/textViewScore"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_columnSpan="6"
        android:gravity="start" />

    <Button
        android:layout_width="52dp"
        android:text=" "
        android:textColor="#000000"
        android:layout_row="4"
        android:layout_column="2"
        android:id="@+id/button1"
        android:background="@drawable/star_01"
        />
    <Button
        android:layout_width="52dp"
        android:textColor="#000000"
        android:text=" "
        android:id="@+id/button2"
        android:layout_row="4"
        android:layout_column="3"
        android:background="@drawable/star_01"
        />
    <Button
        android:layout_width="52dp"
        android:textColor="#000000"
        android:text=" "
        android:id="@+id/button3"
        android:layout_row="4"
        android:layout_column="4"
        android:background="@drawable/star_01"
        />
    <Button
        android:textColor="#000000"
        android:text=" "
        android:id="@+id/button4"
        android:layout_width="52dp"
        android:layout_row="4"
        android:layout_column="5"
        android:background="@drawable/star_01"
        />

    <TextView
        android:text="@string/give_comment"
        android:textSize="16dip"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_columnSpan="5"
        android:layout_gravity="left"
        />
    <EditText
        android:layout_row="6"
        android:id="@+id/comment"
        android:layout_column="2"
        android:layout_columnSpan="5"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:maxLines="4"
        android:lines="4"
        android:layout_marginBottom="70dp"
        android:inputType="textMultiLine"
        android:background="#FFFFFF"
        >
    </EditText>

</GridLayout>