<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_page"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:text="กดปุ่มเลือกเมื่อถึงเป้าหมาย"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/finishButton"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/but_safe_ride"
                android:layout_weight="6.5"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:text="@string/give_score"
                android:textSize="22dp"
                android:layout_marginTop="5dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/textViewScore"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/button1"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:src="@drawable/star_01"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:src="@drawable/star_01"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:src="@drawable/star_01"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/button4"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:src="@drawable/star_01"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/button5"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:src="@drawable/star_01"
                    />
            </LinearLayout>
            <TextView
                android:text="@string/give_comment"
                android:layout_marginTop="5dp"
                android:textSize="22dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal" />
            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:maxLines="5"
                android:lines="5"
                android:layout_weight="3"
                android:inputType="textMultiLine"
                android:layout_marginBottom="40dp"
                android:background="@drawable/rounded_edittext"/>



        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>
</LinearLayout>